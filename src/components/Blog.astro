---
import { ExternalLink, BookOpen } from 'lucide-react';
import IconWrapper from './IconWrapper.tsx';

const articles = [
  {
    title: "How to Calculate GPT-3 API Call Costs with Python",
    description: "Learn how to estimate GPT-3 API call costs programmatically using Python and tokenization techniques.",
    link: "https://bibinhashley.medium.com/how-to-estimate-gpt-3-api-call-costs-with-python-3a33f195a2dc",
    color: "text-green-400",
    bgColor: "bg-green-500/20",
    borderColor: "border-green-500/30",
    icon: "Brain"
  },
  {
    title: "Creating a Sentence Similarity Checker API in Python FastAPI",
    description: "Build a semantic sentence similarity API using FastAPI and Google's Universal Sentence Encoder.",
    link: "https://bibinhashley.medium.com/sentence-similarity-api-creating-a-sentence-similarity-checker-api-fast-api-923aba21947e",
    color: "text-blue-400",
    bgColor: "bg-blue-500/20",
    borderColor: "border-blue-500/30",
    icon: "Code"
  }
];
---

<section class="py-20 md:py-28 px-4 relative overflow-hidden">
  <div class="max-w-7xl mx-auto relative z-10">
    <!-- Enhanced Section Header -->
    <div class="text-center mb-16 md:mb-20 opacity-0 animate-fade-in">
      <div class="inline-block mb-6">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gradient heading-style text-balance mb-6">
          Blog & Articles
        </h2>
      </div>
      <div class="flex items-center justify-center space-x-2">
        <div class="h-1 w-16 bg-gradient-to-r from-transparent via-purple-500 to-transparent rounded-full"></div>
        <div class="w-3 h-3 bg-purple-500 rounded-full shadow-glow animate-pulse"></div>
        <div class="h-1 w-16 bg-gradient-to-r from-transparent via-pink-500 to-transparent rounded-full"></div>
      </div>
    </div>

    <!-- Medium Profile Section -->
    <div class="glass-card rounded-2xl p-6 md:p-8 interactive-hover glow-border group will-change-transform text-center opacity-0 animate-fade-in-delay-200 relative overflow-hidden">
      <div class="bg-blue-500/20 p-3 md:p-4 rounded-lg inline-block mb-4 md:mb-6">
        <BookOpen className="w-6 h-6 md:w-8 md:h-8 text-blue-400" client:load />
      </div>
      <h3 class="text-xl md:text-2xl font-bold text-white mb-3 md:mb-4">Medium Articles</h3>
      <p class="text-slate-300 mb-4 md:mb-6 leading-relaxed text-sm md:text-base">
        I share insights about backend development, AI integration, and modern software engineering practices on Medium.
      </p>
      <a
        href="https://bibinhashley.medium.com"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-4 md:px-6 py-2 md:py-3 rounded-lg transition-colors duration-300 text-sm md:text-base"
      >
        <ExternalLink className="w-4 h-4 md:w-5 md:h-5 mr-2" client:load />
        Visit My Medium
      </a>

      {/* Shimmer Effect */}
      <div class="absolute inset-0 rounded-2xl overflow-hidden pointer-events-none">
        <div class="shimmer absolute inset-0 opacity-10"></div>
      </div>

      {/* Gradient Border on Hover */}
      <div class="absolute inset-0 rounded-2xl border-2 border-transparent bg-gradient-to-r from-blue-500/20 via-purple-500/20 to-pink-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
    </div>

    <!-- Featured Articles -->
    <div class="mt-8 md:mt-12 grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 opacity-0 animate-fade-in-delay-400">
      {articles.map((article, index) => (
          <div 
            class={`glass-card rounded-2xl p-4 md:p-6 interactive-hover glow-border group will-change-transform opacity-0 animate-fade-in-delay-${600 + (index * 100)} relative overflow-hidden`}
          >
            <div class={`${article.bgColor} p-2 md:p-3 rounded-lg inline-block mb-3 md:mb-4`}>
              <IconWrapper name={article.icon} className={`w-5 h-5 md:w-6 md:h-6 ${article.color}`} client:load />
            </div>
            <h4 class="text-base md:text-lg font-semibold text-white mb-2 md:mb-3 group-hover:text-blue-400 transition-colors duration-300">
              {article.title}
            </h4>
            <p class="text-slate-300 text-xs md:text-sm mb-3 md:mb-4 leading-relaxed">
              {article.description}
            </p>
            <a
              href={article.link}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors duration-300 text-sm md:text-base"
            >
              <ExternalLink className="w-3 h-3 md:w-4 md:h-4 mr-2" client:load />
              Read Article
            </a>

            {/* Shimmer Effect */}
            <div class="absolute inset-0 rounded-2xl overflow-hidden pointer-events-none">
              <div class="shimmer absolute inset-0 opacity-10"></div>
            </div>

            {/* Gradient Border on Hover */}
            <div class="absolute inset-0 rounded-2xl border-2 border-transparent bg-gradient-to-r from-blue-500/20 via-purple-500/20 to-pink-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
          </div>
        ))}
    </div>
  </div>
</section>

