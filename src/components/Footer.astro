---
import { Heart, Terminal, GitBranch, CheckCircle2 } from 'lucide-react';
---

<footer class="py-6 border-t border-gray-800 backdrop-blur-sm">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-xs font-mono text-gray-500">
      
      {/* Left: Status Indicators */}
      <div class="flex items-center gap-6">
        <div class="flex items-center gap-2">
          <Terminal size={14} className="text-gray-400" />
          <span>EXECUTION: NORMAL</span>
        </div>
        <div class="flex items-center gap-2">
          <GitBranch size={14} className="text-accent-500" />
          <span>main*</span>
        </div>
        <div class="flex items-center gap-2">
          <CheckCircle2 size={14} className="text-green-500" />
          <span>0 ERRORS</span>
        </div>
      </div>

      {/* Right: Copyright & Credits */}
      <div class="flex items-center gap-2 opacity-75 hover:opacity-100 transition-opacity">
        <span>Â© 2025 Bibin Hashley</span>
        <span>|</span>
        <span class="flex items-center gap-1">
