---
const skillCategories = [
  {
    title: "Languages",
    skills: ["Python", "Kotlin", "Java", "SQL", "JavaScript"],
    color: "primary",
  },
  {
    title: "Frameworks",
    skills: ["Flask", "FastAPI", "Django", "OpenAI GPT APIs"],
    color: "accent",
  },
  {
    title: "Database",
    skills: ["ClickHouse", "PostgreSQL", "REST APIs"],
    color: "primary",
  },
  {
    title: "Infrastructure",
    skills: ["Docker", "GCP", "CI/CD", "Git"],
    color: "accent",
  },
  {
    title: "AI/ML Tools",
    skills: ["scikit-learn", "NumPy", "Pandas", "OpenAI"],
    color: "primary",
  },
  {
    title: "Monitoring",
    skills: ["Zabbix", "Agile practices", "Markdown"],
    color: "accent",
  }
];
---

<section id="skills" class="py-20 md:py-32 px-4 relative overflow-hidden">
  <div class="max-w-7xl mx-auto relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20">
      <h2 class="text-3xl md:text-5xl font-bold font-mono mb-4">
        <span class="text-white">Technical </span>
        <span class="text-accent-400">Skills</span>
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 lg:gap-8">
      {skillCategories.map((category, index) => (
        <div class="bg-dev-card border border-dev-border rounded-2xl p-5 md:p-6 lg:p-8 hover:border-accent-400 transition-all duration-300 group relative overflow-hidden scroll-animate" style={`animation-delay: ${index * 100}ms`}>
          <h3 class="text-lg md:text-xl lg:text-2xl font-bold text-white mb-3 md:mb-4 font-mono group-hover:text-accent-400 transition-colors duration-300">
            {category.title}
          </h3>
          <div class="flex flex-wrap gap-1.5 md:gap-2">
            {category.skills.map((skill) => (
              <span class={`px-2.5 py-1 md:px-3 md:py-1.5 rounded-lg text-xs md:text-sm font-medium font-mono transition-all duration-300 ${
                category.color === 'accent'
                  ? 'bg-accent-500/20 text-accent-300 border border-accent-500/30 hover:bg-accent-500/30'
                  : 'bg-primary-500/20 text-primary-300 border border-primary-500/30 hover:bg-primary-500/30'
              }`}>
                {skill}
              </span>
            ))}
          </div>

          <!-- Hover glow effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-accent-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none rounded-2xl"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .scroll-animate {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .scroll-animate.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('.scroll-animate').forEach((el) => {
    observer.observe(el);
  });
</script>
