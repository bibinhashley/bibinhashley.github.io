---
import IconWrapper from './IconWrapper.tsx';

const skillCategories = [
  {
    title: "Languages",
    skills: ["Python", "Kotlin", "Java", "SQL", "JavaScript"],
    color: "blue",
    icon: "Code2"
  },
  {
    title: "Frameworks",
    skills: ["Flask", "FastAPI", "Django", "OpenAI GPT APIs"],
    color: "green",
    icon: "Server"
  },
  {
    title: "Database",
    skills: ["ClickHouse", "PostgreSQL", "REST APIs"],
    color: "purple",
    icon: "Database"
  },
  {
    title: "Infrastructure",
    skills: ["Docker", "GCP", "CI/CD", "Git"],
    color: "orange",
    icon: "Cloud"
  },
  {
    title: "AI/ML Tools",
    skills: ["scikit-learn", "NumPy", "Pandas", "OpenAI"],
    color: "pink",
    icon: "Cpu"
  },
  {
    title: "Monitoring",
    skills: ["Zabbix", "Agile practices", "Markdown"],
    color: "cyan",
    icon: "Monitor"
  }
];

const colorMap = {
  blue: "bg-blue-500/20 text-blue-400 border-blue-500/30",
  green: "bg-green-500/20 text-green-400 border-green-500/30",
  purple: "bg-purple-500/20 text-purple-400 border-purple-500/30",
  orange: "bg-orange-500/20 text-orange-400 border-orange-500/30",
  pink: "bg-pink-500/20 text-pink-400 border-pink-500/30",
  cyan: "bg-cyan-500/20 text-cyan-400 border-cyan-500/30"
};
---

<section class="py-20 md:py-28 px-4 relative overflow-hidden">
  <div class="max-w-7xl mx-auto relative z-10">
    <!-- Enhanced Section Header -->
    <div class="text-center mb-16 md:mb-20 opacity-0 animate-fade-in">
      <div class="inline-block mb-6">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gradient heading-style text-balance mb-6">
          Technical Skills
        </h2>
      </div>
      <div class="flex items-center justify-center space-x-2">
        <div class="h-1 w-16 bg-gradient-to-r from-transparent via-purple-500 to-transparent rounded-full"></div>
        <div class="w-3 h-3 bg-purple-500 rounded-full shadow-glow animate-pulse"></div>
        <div class="h-1 w-16 bg-gradient-to-r from-transparent via-pink-500 to-transparent rounded-full"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {skillCategories.map((category, index) => (
          <div 
            class={`glass-card rounded-2xl p-4 md:p-6 interactive-hover glow-border group will-change-transform opacity-0 animate-fade-in-delay-${(index + 1) * 100} relative overflow-hidden`}
          >
            <div class={`inline-flex items-center justify-center p-2 md:p-3 rounded-lg mb-3 md:mb-4 ${colorMap[category.color]}`}>
              <IconWrapper name={category.icon} className="w-6 h-6" client:load />
            </div>
            <h3 class="text-lg md:text-xl font-bold text-white mb-3 md:mb-4">{category.title}</h3>
            <div class="flex flex-wrap gap-2">
              {category.skills.map((skill) => (
                <span class="bg-slate-700/50 text-slate-300 px-2 md:px-3 py-1 rounded-full text-xs md:text-sm border border-slate-600">
                  {skill}
                </span>
              ))}
            </div>

            {/* Shimmer Effect */}
            <div class="absolute inset-0 rounded-2xl overflow-hidden pointer-events-none">
              <div class="shimmer absolute inset-0 opacity-10"></div>
            </div>

            {/* Gradient Border on Hover */}
            <div class="absolute inset-0 rounded-2xl border-2 border-transparent bg-gradient-to-r from-blue-500/20 via-purple-500/20 to-pink-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
          </div>
        ))}
    </div>
  </div>
</section>