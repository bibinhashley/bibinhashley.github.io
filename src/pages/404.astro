---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer.astro';
import { Terminal, Home } from 'lucide-react';
---

<Layout title="404: Not Found | Bibin Hashley" description="The page you are looking for does not exist.">
  <Navigation client:load />

  <main class="min-h-screen flex items-center justify-center px-4 relative z-10">
    <div class="text-center">
      <div class="inline-flex items-center justify-center p-6 bg-red-500/10 rounded-3xl mb-8 border border-red-500/20 shadow-[0_0_30px_rgba(239,68,68,0.2)]">
        <Terminal size={64} class="text-red-500" />
      </div>
      
      <h1 class="text-6xl md:text-8xl font-bold font-mono bg-clip-text text-transparent bg-gradient-to-r from-red-500 to-orange-500 mb-4 tracking-tighter">
        404
      </h1>
      
      <div class="font-mono text-xl md:text-2xl text-red-400 mb-8 bg-black/30 inline-block px-4 py-2 rounded-lg border border-red-500/20">
        Error: Command not found
      </div>
      
      <p class="text-gray-400 max-w-md mx-auto mb-12 text-lg">
        The requested URL was not found on this server. It seems you've ventured into uncharted territory.
      </p>

      <a 
        href="/" 
        class="inline-flex items-center gap-3 px-8 py-4 bg-gray-800 hover:bg-gray-700 text-white rounded-xl border border-gray-700 hover:border-accent-500/50 transition-all hover:scale-105 hover:shadow-lg hover:shadow-accent-500/20 font-mono group"
      >
        <Home size={20} class="group-hover:text-accent-400 transition-colors" />
        <span>cd ~</span>
      </a>
    </div>
  </main>

  <Footer />
</Layout>
