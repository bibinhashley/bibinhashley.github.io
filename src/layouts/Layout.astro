---
import InteractiveBackground from '../components/InteractiveBackground.tsx';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Bibin Hashley O P - Senior Python AI Developer specializing in machine learning, automation scripting, and Kotlin development. 4+ years building intelligent systems." } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.ico" />

    
    <!-- DNS Prefetch and Preconnect -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Optimized Font Loading -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@300;400;500;600&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@300;400;500;600&display=swap"
        rel="stylesheet"
      />
    </noscript>
    
    <!-- Google Search Console Verification -->
    <meta name="google-site-verification" content="e8c2eb7adb8943a2" />
    
    <!-- SEO Meta Tags -->
    <meta name="author" content="Bibin Hashley O P" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="keywords" content="Bibin Hashley O P, Python AI Developer, Machine Learning Developer, Automation Expert, Kotlin Developer, Python Scripting, AI Development, OpenAI GPT Integration, Flask Developer, FastAPI, Backend Development, Software Engineer, API Development, Python Programming, ML Engineering, Artificial Intelligence, Data Science, Kerala Developer, Kozhikode, Calicut" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    <meta name="theme-color" content="#1e40af" />
    <meta property="og:site_name" content="Bibin Hashley O P | Python AI Developer" />
    <meta name="application-name" content="Bibin Hashley O P | Python AI Developer" />
    <meta name="msapplication-TileColor" content="#1e40af" />
    <meta name="apple-mobile-web-app-title" content="Bibin Hashley" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="mobile-web-app-capable" content="yes" />
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content="https://bibinhashley.github.io/og-image.png" />
    <meta property="og:image:alt" content="Bibin Hashley O P - Python AI Developer & Automation Expert Portfolio" />
    <meta property="og:site_name" content="Bibin Hashley O P" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://bibinhashley.github.io/og-image.png" />
    <meta name="twitter:image:alt" content="Bibin Hashley O P - Python AI Developer & Automation Expert Portfolio" />
    <meta name="twitter:creator" content="@bibinhashley" />
    <meta name="twitter:site" content="@bibinhashley" />
    
    <!-- LinkedIn specific -->
    <meta property="article:author" content="https://linkedin.com/in/bibinhashley" />
    
    <!-- Additional Social Media Meta Tags -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:creator" content="@bibinhashley" />
    <meta name="twitter:site" content="@bibinhashley" />
    <meta name="twitter:label1" content="Written by" />
    <meta name="twitter:data1" content="Bibin Hashley O P" />
    <meta name="twitter:label2" content="Est. reading time" />
    <meta name="twitter:data2" content="3 minutes" />
    
    <!-- Enhanced Schema.org structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Bibin Hashley O P",
        "alternateName": "Bibin Hashley",
        "jobTitle": ["Senior Python AI Developer", "Machine Learning Engineer", "Automation Specialist"],
        "description": "Senior Python AI Developer with 4+ years of expertise in machine learning, intelligent automation, and scalable AI systems development.",
        "url": "https://bibinhashley.github.io",
        "image": "https://bibinhashley.github.io/og-image.png",
        "email": "bibinhashley@gmail.com",
        "telephone": "+91-XXXXXXXXXX",
        "sameAs": [
          "https://github.com/bibinhashley",
          "https://linkedin.com/in/bibinhashley",
          "https://twitter.com/bibinhashley"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Kozhikode",
          "addressRegion": "Kerala",
          "addressCountry": "India"
        },
        "worksFor": {
          "@type": "Organization",
          "name": "Freelance Developer"
        },
        "knowsAbout": [
          "Python AI Development",
          "Machine Learning Engineering",
          "Intelligent Automation",
          "Python Scripting",
          "Kotlin Development",
          "OpenAI GPT Integration",
          "Natural Language Processing",
          "Flask Framework",
          "FastAPI Development",
          "Backend Development",
          "API Development",
          "Database Systems",
          "Cloud Computing",
          "Docker Containerization",
          "Software Architecture",
          "Data Science",
          "scikit-learn",
          "TensorFlow",
          "PyTorch",
          "NumPy",
          "Pandas",
          "Automation Scripting"
        ],
        "hasOccupation": {
          "@type": "Occupation",
          "name": "Senior Python AI Developer & Machine Learning Engineer",
          "occupationalCategory": "15-1252.00",
          "skills": "Python AI Development, Machine Learning Engineering, Intelligent Automation, Python Scripting, Kotlin Development, OpenAI GPT Integration, Flask, FastAPI, Backend Development, API Design, Data Science",
          "workLocation": "Kerala, India"
        }
      }
    </script>
    
    <!-- Website Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Bibin Hashley O P | Python AI Developer Portfolio",
        "url": "https://bibinhashley.github.io",
        "description": "Professional portfolio of Bibin Hashley O P - Senior Python AI Developer & Machine Learning Engineer",
        "author": {
          "@type": "Person",
          "name": "Bibin Hashley O P"
        },
        "inLanguage": "en-US",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://bibinhashley.github.io/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>

    <!-- CreativeWork Schema for Blog Articles -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "CreativeWork",
        "name": "Python AI Development & Kotlin Backend Articles",
        "author": {
          "@type": "Person",
          "name": "Bibin Hashley O P",
          "url": "https://bibinhashley.github.io"
        },
        "publisher": {
          "@type": "Organization",
          "name": "Bibin Hashley O P",
          "url": "https://bibinhashley.github.io"
        },
        "about": [
          "Python AI Development",
          "Machine Learning Engineering",
          "Intelligent Automation",
          "Python Scripting",
          "Kotlin Development",
          "OpenAI GPT Integration",
          "Backend Development",
          "API Development"
        ],
        "isPartOf": {
          "@type": "WebSite",
          "name": "Bibin Hashley O P | Python AI Developer Portfolio",
          "url": "https://bibinhashley.github.io"
        }
      }
    </script>
    
    <title>{title}</title>
  </head>
  <body class="bg-dev-bg">
    <div class="min-h-screen text-white overflow-x-hidden relative">
      <!-- Developer-style background with grid - COVERS ENTIRE PAGE -->
      <div class="fixed inset-0 -z-10 bg-dev-bg">
        <!-- Matrix-style grid background -->
        <div class="absolute inset-0 opacity-20"
          style="background-image: linear-gradient(rgba(168, 85, 247, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(168, 85, 247, 0.1) 1px, transparent 1px); background-size: 50px 50px;">
        </div>

        <!-- Subtle animated gradient orbs -->
        <div class="absolute top-1/4 right-1/3 w-96 h-96 bg-accent-500/5 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/3 left-1/4 w-96 h-96 bg-primary-500/5 rounded-full blur-3xl animate-float-delayed"></div>
      </div>

      <!-- Interactive Background Effects -->
      <InteractiveBackground client:load />

      <!-- Animated corner lines - COVERS ENTIRE PAGE -->
      <div class="fixed top-0 left-0 w-16 h-16 md:w-32 md:h-32 border-t-2 border-l-2 border-accent-500/30 z-0"></div>
      <div class="fixed top-0 right-0 w-16 h-16 md:w-32 md:h-32 border-t-2 border-r-2 border-primary-500/30 z-0"></div>
      <div class="fixed bottom-0 left-0 w-16 h-16 md:w-32 md:h-32 border-b-2 border-l-2 border-primary-500/30 z-0"></div>
      <div class="fixed bottom-0 right-0 w-16 h-16 md:w-32 md:h-32 border-b-2 border-r-2 border-accent-500/30 z-0"></div>

      <!-- Content -->
      <div class="relative z-10">
        <slot />
      </div>
    </div>
  </body>
</html>