---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Bibin Hashley O P - Expert Python AI Developer & Kotlin Backend Developer with 4+ years experience in AI/ML, API development, and scalable backend systems. Based in Kozhikode, Kerala, India." } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    
    <!-- DNS Prefetch and Preconnect -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Optimized Font Loading -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@300;400;500;600&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@300;400;500;600&display=swap"
        rel="stylesheet"
      />
    </noscript>
    
    <!-- Google Search Console Verification -->
    <meta name="google-site-verification" content="e8c2eb7adb8943a2" />
    
    <!-- SEO Meta Tags -->
    <meta name="author" content="Bibin Hashley O P" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="keywords" content="Bibin Hashley, Python AI Developer, Kotlin Backend Developer, Machine Learning Engineer, AI/ML Developer, Backend Developer, API Development, Flask, FastAPI, OpenAI GPT, ChatGPT Integration, Python Developer, Kotlin Developer, Software Engineer, Portfolio, Kozhikode, Kerala, India, Full Stack Developer, Data Science, scikit-learn, NumPy, Pandas, Docker, GCP, Zabbix Monitoring, Automation, CI/CD" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    <meta name="theme-color" content="#1e40af" />
    <meta name="msapplication-TileColor" content="#1e40af" />
    <meta name="application-name" content="Bibin Hashley Portfolio" />
    <meta name="apple-mobile-web-app-title" content="Bibin Hashley" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="mobile-web-app-capable" content="yes" />
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content="https://bibinhashley.github.io/favicon.svg" />
    <meta property="og:image:alt" content="Bibin Hashley O P - Python AI Developer & Kotlin Backend Developer" />
    <meta property="og:site_name" content="Bibin Hashley Portfolio" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://bibinhashley.github.io/favicon.svg" />
    <meta name="twitter:image:alt" content="Bibin Hashley O P - Python AI Developer & Kotlin Backend Developer" />
    <meta name="twitter:creator" content="@bibinhashley" />
    <meta name="twitter:site" content="@bibinhashley" />
    
    <!-- LinkedIn specific -->
    <meta property="article:author" content="https://linkedin.com/in/bibinhashley" />
    
    <!-- Additional Social Media Meta Tags -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:creator" content="@bibinhashley" />
    <meta name="twitter:site" content="@bibinhashley" />
    <meta name="twitter:label1" content="Written by" />
    <meta name="twitter:data1" content="Bibin Hashley O P" />
    <meta name="twitter:label2" content="Est. reading time" />
    <meta name="twitter:data2" content="3 minutes" />
    
    <!-- Enhanced Schema.org structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Bibin Hashley O P",
        "alternateName": "Bibin Hashley",
        "jobTitle": ["Python AI Developer", "Kotlin Backend Developer", "Software Engineer"],
        "description": "Experienced Python AI Developer and Kotlin Backend Developer with 4+ years of expertise in building scalable systems, AI-powered applications, and backend services.",
        "url": "https://bibinhashley.github.io",
        "image": "https://bibinhashley.github.io/favicon.svg",
        "email": "bibinhashley@gmail.com",
        "telephone": "+91-XXXXXXXXXX",
        "sameAs": [
          "https://github.com/bibinhashley",
          "https://linkedin.com/in/bibinhashley",
          "https://twitter.com/bibinhashley"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Kozhikode",
          "addressRegion": "Kerala",
          "addressCountry": "India"
        },
        "worksFor": {
          "@type": "Organization",
          "name": "Freelance Developer"
        },
        "knowsAbout": [
          "Python Programming",
          "Kotlin Development",
          "Artificial Intelligence",
          "Machine Learning",
          "OpenAI GPT Integration",
          "ChatGPT API Development",
          "Flask Framework",
          "FastAPI Development",
          "Backend Development",
          "API Development",
          "Database Design",
          "ClickHouse Database",
          "PostgreSQL",
          "Cloud Computing",
          "Google Cloud Platform",
          "Docker Containerization",
          "CI/CD Pipelines",
          "Zabbix Monitoring",
          "Software Architecture",
          "Data Science",
          "scikit-learn",
          "NumPy",
          "Pandas",
          "Automation Tools"
        ],
        "hasOccupation": {
          "@type": "Occupation",
          "name": "Python AI Developer & Kotlin Backend Developer",
          "occupationalCategory": "15-1252.00",
          "skills": "Python, Kotlin, AI/ML, OpenAI GPT, Flask, FastAPI, Backend Development, API Design, Docker, GCP, Zabbix, scikit-learn, NumPy, Pandas, ClickHouse, PostgreSQL"
        }
      }
    </script>
    
    <!-- Website Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Bibin Hashley Portfolio",
        "url": "https://bibinhashley.github.io",
        "description": "Professional portfolio of Bibin Hashley O P - Python AI Developer & Kotlin Backend Developer",
        "author": {
          "@type": "Person",
          "name": "Bibin Hashley O P"
        },
        "inLanguage": "en-US",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://bibinhashley.github.io/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>

    <!-- CreativeWork Schema for Blog Articles -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "CreativeWork",
        "name": "Python AI Development & Kotlin Backend Articles",
        "author": {
          "@type": "Person",
          "name": "Bibin Hashley O P",
          "url": "https://bibinhashley.github.io"
        },
        "publisher": {
          "@type": "Organization",
          "name": "Bibin Hashley Portfolio",
          "url": "https://bibinhashley.github.io"
        },
        "about": [
          "Python AI Development",
          "Kotlin Backend Development", 
          "OpenAI GPT Integration",
          "FastAPI Development",
          "Machine Learning",
          "API Development"
        ],
        "isPartOf": {
          "@type": "WebSite",
          "name": "Bibin Hashley Portfolio",
          "url": "https://bibinhashley.github.io"
        }
      }
    </script>
    
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen text-white overflow-x-hidden relative">
      <!-- Enhanced Dark Animated Background -->
      <div 
        class="fixed inset-0 -z-10"
        style="background: linear-gradient(to bottom right, #000000, #0f172a, #1e3a8a, #1e40af, #0f172a, #000000); background-size: 400% 400%; animation: gradientShift 20s ease infinite;"
      ></div>
      
      <!-- Dark overlay for extra depth -->
      <div 
        class="fixed inset-0 -z-10"
        style="background: radial-gradient(circle at 30% 70%, rgba(0,0,0,0.4) 0%, transparent 50%), radial-gradient(circle at 70% 30%, rgba(0,0,0,0.3) 0%, transparent 50%);"
      ></div>
      
      <!-- Subtle Animated Elements -->
      <div class="fixed inset-0 -z-10 opacity-20">
        <!-- Floating orbs with subtle animation -->
        <div class="absolute top-1/4 right-1/3 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/3 left-1/4 w-96 h-96 bg-purple-500/8 rounded-full blur-3xl animate-float-delayed"></div>
        <div class="absolute top-2/3 right-1/4 w-64 h-64 bg-cyan-500/12 rounded-full blur-2xl animate-pulse-slow"></div>
        
        <!-- Subtle grid pattern -->
        <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 50px 50px;"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10">
        <slot />
      </div>
    </div>
    
    <!-- Enhanced background animation -->
    <style>
      @keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }
    </style>
  </body>
</html>